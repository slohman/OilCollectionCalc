<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="fill"
    android:orientation="vertical" >

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:text="Gross Weight"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="@dimen/size10" />

        <EditText
            android:id="@+id/txtGrossOil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="0000"
            android:inputType="number" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:text="MIU %      "
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="@dimen/size10" />

        <EditText
            android:id="@+id/txtMIU"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint=".00"
            android:inputType="numberDecimal" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.01" >

        <TextView
            android:id="@+id/textView3"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:text="Gallons of Oil"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="@dimen/size10" />

        <TextView
            android:id="@+id/galOil"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="@dimen/size10" />

    </TableRow>

    <TableRow
        android:id="@+id/tableRow5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.01" >

        <TextView
            android:id="@+id/textView4"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:text="Gallons of MIU"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="@dimen/size10" />

        <TextView
            android:id="@+id/miuGal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="@dimen/size10" />

    </TableRow>
    
     <TableRow
         android:id="@+id/tableRow7"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_weight="0.01" >

        <TextView
            android:id="@+id/textView6"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:text="Gr Oil Wt."
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="@dimen/size10" />

        <TextView
            android:id="@+id/grOil"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="@dimen/size10" />

    </TableRow>
    
     <TableRow
         android:id="@+id/tableRow8"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_weight="0.01" >

        <TextView
            android:id="@+id/textView7"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:text="Gr MIU Wt."
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="@dimen/size10" />

        <TextView
            android:id="@+id/grMIU"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="@dimen/size10" />

    </TableRow>

     <TableRow
         android:id="@+id/tableRow6"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_weight="0.01" >

         <TextView
             android:id="@+id/textView5"
             android:layout_width="175dp"
             android:layout_height="wrap_content"
             android:text="Net OIl Lbs"
             android:textAppearance="?android:attr/textAppearanceMedium"
             android:textSize="@dimen/size10" />

         <TextView
             android:id="@+id/netOil"
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:textAppearance="?android:attr/textAppearanceMedium"
             android:textSize="@dimen/size10" />
     </TableRow>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_weight="0.14" >

        <Button
            android:id="@+id/calcmiu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="false"
            android:layout_centerHorizontal="false"
            android:layout_centerVertical="false"
            android:layout_marginTop="48dp"
            android:text="Calc" />

    </RelativeLayout>

</LinearLayout>