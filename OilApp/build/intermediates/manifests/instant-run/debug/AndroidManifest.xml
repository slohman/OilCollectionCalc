<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ocbiofuel"
    android:versionCode="4"
    android:versionName="2.0" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name="com.android.tools.fd.runtime.BootstrapApplication"
        android:icon="@drawable/oilbarrel"
        android:label="@string/app_name" >
        <activity
            android:name="com.ocbiofuel.OilCollectionCalcActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.ocbiofuel.RatioCalc"
            android:label="Ratio Calc" >
        </activity>
        <activity
            android:name="com.ocbiofuel.CollectionPost"
            android:label="Post" >
        </activity>
        <activity
            android:name="com.ocbiofuel.RegDataPost"
            android:label="Reg Data Post" >
        </activity>
        <activity
            android:name="com.ocbiofuel.LookUpID"
            android:label="ID Look Up" >
        </activity>
        <activity
            android:name="com.ocbiofuel.miuadj"
            android:label="ADJ OIL FOR MIU" >
        </activity>
    </application>

</manifest>